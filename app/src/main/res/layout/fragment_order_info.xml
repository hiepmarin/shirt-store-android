<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OrderInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/tv_order_info_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Order Info"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_order_info_text2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text1"
                android:layout_marginTop="5dp"
                android:text="ID: "
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_order_info_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text1"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text2"
                android:text="ABCDEF123457"
                android:textColor="@color/teal_200"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text2"
                android:layout_marginTop="5dp"
                android:text="Order date:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text3"
                android:text="10-09-2021"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text3"
                android:layout_marginTop="5dp"
                android:text="Name:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text4"
                android:text="Hiep Sieu Nhan"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text4"
                android:layout_marginTop="5dp"
                android:text="Address:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_cust_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text4"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="70D St.185"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text5"
                android:layout_marginTop="5dp"
                android:text="Phone:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_cust_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text5"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="0777838375"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text7"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text6"
                android:layout_marginTop="5dp"
                android:text="Total quantity:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text6"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="2"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text7"
                android:layout_marginTop="5dp"
                android:text="Total amount:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text7"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text6"
                android:text="10,000,000 VNĐ"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_text9"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text8"
                android:layout_marginTop="5dp"
                android:text="Status:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_order_info_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text8"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_order_info_text7"
                android:text="Pending"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_order_info_text9"
                android:layout_marginTop="5dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_order_info_text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:layout_marginTop="10dp"
                android:text="Product list of order:"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_info_text10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btn_order_info_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/rcv_order_info"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button_red"
                android:backgroundTint="@null"
                android:text="Back"
                android:textSize="15sp"
                app:backgroundTint="@null" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>