<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/img_photo_cart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile_image"></ImageView>

            <ImageView
                android:id="@+id/img_remove_cart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/img_photo_cart"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_delete_24"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tv_name_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:text="Iphone 12"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_price_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_name_product_cart"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="20.990.00 VND"
                android:textColor="@color/red"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_minus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_remove_24" />

            <TextView
                android:id="@+id/tv_count_cart"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@+id/img_minus_cart"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_plus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_count_cart"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_add_24" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>